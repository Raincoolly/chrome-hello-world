{
	"manifest_version": 2,

	"name": "Hello World",
	"description": "The Hello World",
	"version": "1.0",

	"permissions": [
		"notifications",
		"background"
	],

	"web_accessible_resources": [
		"icon.png"
	],

	"background": {
		"scripts": ["background.js"]
	},

	"browser_action": {
		"default_icon": "icon.png",
		"default_popup": "popup.html"
	}
}
